<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="triangle" class="com.bean.Triangle">
        <property name="name" value="Right angled Triange"/>
        <property name="base" value="10"/>
        <property name="height" value="18"/>
    </bean>

    <bean id="circle" class="com.bean.Circle">
        <property name="radius" value="10"/>
    </bean>
</beans>